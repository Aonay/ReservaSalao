<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@color/app_theme_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Status -->
        <ImageView
            android:id="@+id/iconStatus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_historico"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:text="Status: Confirmado"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconStatus"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Data -->
        <ImageView
            android:id="@+id/iconData"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_calendar2"
            app:layout_constraintTop_toBottomOf="@id/txtStatus"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:text="Data: 20/10/2025"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconData"
            app:layout_constraintTop_toBottomOf="@id/txtStatus" />

        <!-- Hora -->
        <ImageView
            android:id="@+id/iconHora"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_hora"
            app:layout_constraintTop_toBottomOf="@id/txtData"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtHora"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingStart="8dp"
            android:text="Hora: 14:00"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconHora"
            app:layout_constraintTop_toBottomOf="@id/txtData" />

        <!-- Cliente -->
        <ImageView
            android:id="@+id/iconCliente"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_user"
            app:layout_constraintTop_toBottomOf="@id/txtHora"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingStart="8dp"
            android:text="Cliente: Ana Souza"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconCliente"
            app:layout_constraintTop_toBottomOf="@id/txtHora" />

        <!-- Serviço -->
        <ImageView
            android:id="@+id/iconServico"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_servico"
            app:layout_constraintTop_toBottomOf="@id/txtCliente"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtServico"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingStart="8dp"
            android:text="Serviço: Corte Feminino"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconServico"
            app:layout_constraintTop_toBottomOf="@id/txtCliente" />

        <!-- Salão -->
        <ImageView
            android:id="@+id/iconSalao"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_historico"
            app:layout_constraintTop_toBottomOf="@id/txtServico"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtSalao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingStart="8dp"
            android:text="Salão: Glamour Hair"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconSalao"
            app:layout_constraintTop_toBottomOf="@id/txtServico" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
